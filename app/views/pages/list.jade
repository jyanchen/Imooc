extends ../layout

block content
	.container.main
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影名字
						th 导演
						th 国家
						th 上映年份
						th 录入时间
						th pv
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies
						tr(class="item-id-#{item._id}")
							td.name #{item.title}
							td.director #{item.doctor}
							td.nation #{item.country}
							td.year #{item.year}
							td #{moment(item.meta.creatAt).format("MM/DD/YYYY")}
							td #{item.pv}
							td.detial: a(target="_blank",href="/movie/#{item._id}") 查看
							td.update: a(target="_blank",href="/admin/movie/update/#{item._id}") 修改
							td.delete: button.btn.btn-xs.btn-danger.del(type="button",data-id="#{item._id}") 删除
	script(src="/js/admin.js")