extends ../layout

block content
	.container.main
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 名字
						th 时间
						th 查看
						th 修改
						th 删除
				tbody
					each item in users
						tr(class="item-id-#{item._id}")
							td.name #{item.name}
							td #{moment(item.meta.creatAt).format("YYYY-MM-DD")}
							td.detial: a(target="_blank",href="../movie/#{item._id}") 查看
							td.update: a(target="_blank",href="../admin/update/#{item._id}") 修改
							td.delete: button.btn.btn-xs.btn-danger.del(type="button",data-id="#{item._id}") 删除